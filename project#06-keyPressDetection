<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            background-color: black;
            color: white;
        }
        .container{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 600px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 id="textId" class="insert">Press any key to see</h1>
    </div>
</body>
<script>
    const text = document.querySelector('#textId');
    window.addEventListener('keydown', (e)=>{
        text.innerHTML = `
        <div class= "container">
<table>
  <tr>
    <th>key</th>
    <th>keyCode</th>
    <th>code</th>
  </tr>
  <tr>
    <td>${e.key === " " ? 'Space' : e.key}</td>
    <td>${e.keyCode}</td>
    <td>${e.code}</td>
  </tr>
  </table>
            </div>
        `;
        
    })
</script>
</html>
