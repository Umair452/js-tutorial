          <input
            type="text"
            id="height"
            name="height"
            placeholder="Enter height"
          />
        </div>
        <div class="form-group">
          <label for="weight">Weight (in kg):</label>
          <input
            type="text"
            id="weight"
            name="weight"
            placeholder="Enter weight"
          />
        </div>
